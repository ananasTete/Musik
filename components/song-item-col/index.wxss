/* components/hot-song-item/index.wxss */
.song-item {
  width: 200rpx;
}

.song-item .img {
  position: relative;
}
.song-item .img .count {
  position: absolute;
  right: 0rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0, .5);
}
.song-item .img .image {
  width: 100%;
}

.song-item .title {
  width: 100%;
  font-size: 26rpx;
  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}